---
//src/components/Card.astro
const {name, position, aboutMe, linkedin, github, cvLink, profileImage } = Astro.props;

import '../styles/card.css';
---

<div class="container">
    <div class="card-container">
        <div class="descripcion">
            <h1 style="border-bottom: 1px solid #ccc;">{name}</h1>
            <h2>{position}</h2>
            <br>
            <div>
                {aboutMe.split("\n").map(line => (
                    <p>
                    {line}<br />
                    </p>
                ))}
            </div>
            <div class="icons">
                <a href={linkedin} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        LinkedIn
                    </span>
                    <i class="bi bi-linkedin"></i>
                </a>
                <a href={github} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        GitHub
                    </span>
                    <i class="bi bi-github"></i>
                </a>
                <a href={cvLink} class="hover-text" target="_blank">
                    <span class="tooltip-text" id="fade">
                        Resume
                    </span>
                    <i class="bi bi-file-earmark-arrow-down"></i>
                </a>
            </div>
        </div>
        <div class="image">
            <img style="padding: .2rem; border-radius: 12px; background: white; box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);" src={profileImage} alt="">
        </div>
    </div>
</div>